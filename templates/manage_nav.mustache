{{!
    @template block_recommend_course/manage_nav

    Navigation tabs template for managing course recommendations.

    Example context (json):
    {
        "tabs": [
            {
                "id": "all",
                "label": "All",
                "url": "#all",
                "active": true
            },
            {
                "id": "recommended",
                "label": "Recommended",
                "url": "#recommended",
                "active": false
            }
        ]
    }
}}
<ul class="block_recommend_course-tabs">
    {{#tabs}}
    <li class="tab-button {{#active}}active{{/active}}" data-tab="tab-{{id}}">
        <a href="{{{url}}}">{{label}}</a>
    </li>
    {{/tabs}}
</ul>