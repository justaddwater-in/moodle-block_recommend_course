<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/recommend_course/db" VERSION="2025013001" COMMENT="Recommend a Course block with recommendations table">
    <TABLES>
        <!-- New mdl_block_recommend_course_rds table -->
        <TABLE NAME="block_recommend_course_rds" COMMENT="stores course recommendations">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key" />
                <FIELD NAME="sender_id" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID of the sender (recommender)" />
                <FIELD NAME="receiver_id" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID of the receiver (person receiving the recommendation)" />
                <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID of the recommended course" />
                <FIELD NAME="created_on" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Timestamp when the recommendation was created" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
